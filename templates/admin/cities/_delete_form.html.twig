<form method="post" action="{{ path('admin_cities_delete', {'id': city.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette ville ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">

    <button title="Supprimer" class="btn delete-btn actions-size m-1" aria-label="Supprimer">
        <i alt="Supprimer" class="fa-solid fa-trash-can"></i>
    </button>
</form>
