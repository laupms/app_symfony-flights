{% extends 'base.html.twig' %}

{% block title %}flights - Accès interdit | Erreur {{ status_code }}{% endblock%}

{% block body %}

<div class="container-fluid text-center">
    <div class="row">
        <div class="col">
            <h1>ERREUR {{ status_code }}</h1>
            <p>Une erreur s'est produite sur cette page.</p>
            <p>Veuillez revenir sur la page d'accueil → 
            
                {% if is_granted ('ROLE_ADMIN') %}

                <button class="btn btn-secondary m-3"><a href="{{ path('admin_index') }}" style="text-decoration:none; color:#fff"><i class="fa-solid fa-rotate-left" style="color: #fff;"></i> Retour à l'accueil</a></button>

                {% else %}

                <button class="btn btn-secondary m-3"><a href="{{ path('app_flights_index') }}" style="text-decoration:none; color:#fff"><i class="fa-solid fa-rotate-left" style="color: #fff;"></i> Retour à l'accueil</a></button>

                {% endif %}
            </p> 
        </div>
    </div>
</div>

{% endblock%}